<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE53F49">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="70dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_userid"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_profile" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_userid" />

            <EditText
                android:id="@+id/edit_password2"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_password" />

            <EditText
                android:id="@+id/edit_mailleft"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_password2" />

            <EditText
                android:id="@+id/edit_mailright"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789."
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_password2" />

            <EditText
                android:id="@+id/edit_mailcert"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:inputType="numberPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_mailleft" />

            <EditText
                android:id="@+id/edit_bank"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="25dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <EditText
                android:id="@+id/edit_bankaccount"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_bank" />

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="기본정보"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="8dp"
                android:text="이름"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="8dp"
                android:text="프로필사진"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_name"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:layout_marginEnd="8dp"
                android:text="아이디"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_userid"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="8dp"
                android:text="비밀번호"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_password"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="8dp"
                android:text="비밀번호 확인"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_password2"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="8dp"
                android:text="이메일"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_mailleft"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="@"
                android:textColor="@android:color/background_light"
                app:layout_constraintStart_toEndOf="@+id/edit_mailleft"
                app:layout_constraintTop_toBottomOf="@+id/edit_password2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="8dp"
                android:text="인증번호"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_mailcert"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="45dp"
                android:text="계좌정보"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:text="은행"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_bank"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="8dp"
                android:text="계좌번호"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_bankaccount"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="서비스 이용약관 동의"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_bankaccount" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="개인정보 수집 이용 동의"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBox1" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#FF572732"
                android:text="가입"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:text="찾기"
                app:layout_constraintStart_toEndOf="@+id/img_profile"
                app:layout_constraintTop_toBottomOf="@+id/edit_name" />

            <Button
                android:id="@+id/btn_mailsend"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="2dp"
                android:text="전송"
                app:layout_constraintStart_toStartOf="@+id/edit_mailleft"
                app:layout_constraintTop_toBottomOf="@+id/edit_password2" />

            <Button
                android:id="@+id/btn_mailcert"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="2dp"
                android:text="인증"
                app:layout_constraintStart_toStartOf="@+id/edit_mailcert"
                app:layout_constraintTop_toBottomOf="@+id/edit_mailright" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="44dp"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:srcCompat="@drawable/ic_online_banking" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="44dp"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_user" />

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_name"
                app:srcCompat="@android:color/background_light" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>