<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE53F49"
    tools:context=".activities.UserSearchActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="44dp"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_user" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="44dp"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_submit1"
                app:srcCompat="@drawable/ic_key" />

            <EditText
                android:id="@+id/edit_mailcert"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:inputType="numberPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_mailleft2" />

            <EditText
                android:id="@+id/edit_mailright1"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789."
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_name1" />

            <EditText
                android:id="@+id/edit_mailright2"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789."
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_userid2" />

            <EditText
                android:id="@+id/edit_mailleft1"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_name1" />

            <EditText
                android:id="@+id/edit_mailleft2"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_userid2" />

            <EditText
                android:id="@+id/edit_name1"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="70dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_name2"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/edit_userid2"
                android:layout_width="220dp"
                android:layout_height="36dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/background_light"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_name2" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="아이디 찾기"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="8dp"
                android:text="이름"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_name1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="8dp"
                android:text="이메일"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_mailleft1"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="14dp"
                android:text="@"
                android:textColor="@android:color/background_light"
                app:layout_constraintStart_toEndOf="@+id/edit_mailleft1"
                app:layout_constraintTop_toBottomOf="@+id/edit_name1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="44dp"
                android:text="비밀번호 찾기"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/btn_submit1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:text="이름"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_name2"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="8dp"
                android:text="아이디"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_userid2"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="8dp"
                android:text="이메일"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_mailleft2"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="14dp"
                android:text="@"
                android:textColor="@android:color/background_light"
                app:layout_constraintStart_toEndOf="@+id/edit_mailleft2"
                app:layout_constraintTop_toBottomOf="@+id/edit_userid2" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="8dp"
                android:text="인증번호"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toStartOf="@+id/edit_mailcert"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <Button
                android:id="@+id/btn_mailsend"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="2dp"
                android:text="전송"
                app:layout_constraintStart_toStartOf="@+id/edit_mailleft2"
                app:layout_constraintTop_toBottomOf="@+id/edit_userid2" />

            <Button
                android:id="@+id/btn_mailcert"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="2dp"
                android:text="인증"
                app:layout_constraintStart_toStartOf="@+id/edit_mailcert"
                app:layout_constraintTop_toBottomOf="@+id/edit_mailright2" />

            <Button
                android:id="@+id/btn_submit1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:background="#FF572732"
                android:text="찾기"
                android:textColor="@android:color/background_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_mailleft1" />

            <Button
                android:id="@+id/btn_submit2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:background="#FF572732"
                android:text="찾기"
                android:textColor="@android:color/background_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_mailcert" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>